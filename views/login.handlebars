<section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
  <div class="mdl-cell mdl-cell--12-col">
    <form class="login-form">
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="email-login">
          <label class="mdl-textfield__label" for="sample3">Email...</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="password-login">
          <label class="mdl-textfield__label" for="password-login">Password...</label>
        </div>
        <div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">login</button>
        </div>
      </div>
    </form>
  </div>   
</section>

<section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
  <div class="mdl-cell mdl-cell--12-col">
    <form class="signup-form">
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="username-signup" />
          <label class="mdl-textfield__label" for="username-signup">username:</label> 
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="email-signup" />
          <label class="mdl-textfield__label" for="email-signup">email:</label> 
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="password" id="password-signup" />
          <label class="mdl-textfield__label" for="password-signup">password:</label>
        </div>
        <div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">signup</button>
        </div>
      </div>      
    </form>
  </div>   
</section>

